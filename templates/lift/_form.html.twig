<form name="rep_log" method="post"
  class="js-new-rep-log-form" novalidate="novalidate"
  data-url = {{ path('rep_log_new') }}
>

	<div style="display: inline-block;">
		<div class="form-group">
			<label class="sr-only required" for="item">What did you lift?</label>
			<select id="rep_log_item" name="item" required="required">
				<option value="">What did you lift?</option>
				<option value="cat">Cat</option>
				<option value="fat_cat" selected="selected">Big Fat Cat</option>
				<option value="laptop">My Laptop</option>
				<option value="coffee_cup">Coffee Cup</option>
			</select>
		</div>
	</div>
	<div style="display: inline-block;">
		<div class="form-group">
			<label class="sr-only required" for="reps">How many times?</label>
			<input type="number" id="rep_log_reps" name="reps" required="required" placeholder="How many times?" value="-3" /></div>
	</div>


	<button type="submit" class="btn btn-primary">I Lifted it!</button>
</form>