{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	<link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script src="{{ asset('build/login.js') }}"></script>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="wrapper">
			<form method="post" class="form-signin">
				<div class="js-recommended-login">
					<a href="#" class="js-show-login">Don't know the login?</a>
					<div class="js-recommended-login-details" style="display: none;">
						Sir or madam, might I recommend that you try the following login details:
						<table class="table">
							<tbody>
							<tr>
								<th>Username</th>
								<td>cindy_clawford</td>
							</tr>
							<tr>
								<th>Password</th>
								<td>pumpup</td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
				<hr class="colorgraph" />

				{% if error %}
					<div class="alert alert-block alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<label for="inputUsername" class="sr-only">Username</label>
				<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control js-login-field-username" placeholder="Username" required autofocus>
				<label for="inputPassword" class="sr-only">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

				<input type="hidden" name="_csrf_token"
				       value="{{ csrf_token('authenticate') }}"
				>

				<input type="checkbox" name="_remember_me" checked style="display: none;" />



				<button class="btn btn-lg btn-primary" type="submit">
					Sign in
				</button>
			</form>
		</div>
	</div>

{% endblock %}
